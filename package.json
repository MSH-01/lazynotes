  "main": "index.js",
  "scripts": {
    "start": "npx tsx index.tsx",
    "dev": "npx tsx index.tsx",
    "typecheck": "tsc --noEmit",
    "build": "bun build index.tsx --compile --outfile dist/lazynotes",
    "build:mac-arm": "bun build index.tsx --compile --target=bun-darwin-arm64 --outfile dist/lazynotes-darwin-arm64",
    "build:mac-intel": "bun build index.tsx --compile --target=bun-darwin-x64 --outfile dist/lazynotes-darwin-x64",
    "build:all": "npm run build:mac-arm && npm run build:mac-intel",
    "release": "./scripts/release.sh",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MSH-01/lazynotes.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bin": {
    "lazynotes": "./index.tsx"
  },
  "bugs": {
    "url": "https://github.com/MSH-01/lazynotes/issues"
  },
  "homepage": "https://github.com/MSH-01/lazynotes#readme",
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "chokidar": "^5.0.0",
    "date-fns": "^4.1.0",
    "fullscreen-ink": "^0.1.0",
    "fuzzysort": "^3.1.0",
    "ink": "^6.6.0",
    "meow": "^14.0.0",
    "pretty-bytes": "^7.1.0",
    "react": "^19.2.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^19.1.8",
